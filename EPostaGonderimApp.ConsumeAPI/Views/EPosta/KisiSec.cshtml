@model List<EPostaGonderimApp.ConsumeAPI.Models.KisiViewModels.KisiListVM>

@{
    ViewData["Title"] = "KisiSec";
}

<h1>Kisi Seç</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="EPosta" asp-action="KisiSeciminiIlet" method="get">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <input type="checkbox" asp-for="@Model[i].SecildiMi" />

                <label asp-for="@Model[i].SecildiMi">    @Model[i].EPostaAdresi</label>
                <input type="hidden" asp-for="@Model[i].KisiID" />
                <input type="hidden" asp-for="@Model[i].EPostaAdresi" />

                <br />

            }
            <button class="btn btn-primary" type="submit">Seç</button>

        </form>

    </div>
</div>

    
    

